                    document.getElementById('reNOID').innerHTML = noidOption
                    document.getElementById('reVID').innerHTML = vidOption
                    document.getElementById('rePID').innerHTML = pidOption
                } else {
                    //document.getElementById('getCook').innerHTML = " 您好";
                    $("#resData2").text(msg);
